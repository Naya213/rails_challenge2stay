<header class="header">
    <h1>
        <%= link_to image_tag("logo.png", class:"image_switch", alt: "アイコン"), users_path %>
    </h1>
    <nav>
    <% if user_signed_in? %>
      <%= "こんにちは#{current_user.email}さん"  %>
      <%= link_to "#{current_user.name}さんの情報はこちら", user_path(current_user)%>
      <%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to 'サインアップ', new_user_registration_path %>
      <%= link_to 'ログイン', new_user_session_path %>
    <% end %>
  </nav>
</header>