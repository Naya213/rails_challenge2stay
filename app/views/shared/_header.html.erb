<header class="header">
  <div class="container">
    <h1>
        <%= link_to image_tag("logo.png", class:"image_switch", alt: "アイコン"), users_path %>
    </h1>
    <nav>
    <% if user_signed_in? %>
      <div class="linkArea-user">
          <% if current_user.img.blank? %>
            <%= image_tag "default_img/default-avatar.png"  %>
          <% else %>
            <%= image_tag "#{current_user.img}"  %>
          <% end %>
            <span>
              <%= current_user.name %>
            </span>
      </div>
      <ul class="dropdown-menu">
        <li><%= link_to '施設の新規登録', new_room_path %></li>
        <li><%= link_to '予約済み一覧', reservations_path %></li>
        <li><%= link_to '登録済み一覧', rooms_own_path %></li>
        <li><%= link_to 'アカウント設定', account_users_path(current_user) %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
      </ul>
      <% else %>
      <%= link_to 'サインアップ', new_user_registration_path %>
      <%= link_to 'ログイン', new_user_session_path %>
    <% end %>
    </nav>
  </div>
</header>