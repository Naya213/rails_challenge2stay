<div class="room_new">
  <h3>新規施設登録</h3>
  <%= render "shared/error", obj: @room %>
  
  <%= form_with model: @room do |f| %>
    <table>
      <tr>
        <th><%= f.label :name, "施設名" %></th>
        <td><%= f.text_field :name, class:"room-name" %></td>
      </tr>
      <tr>
          <th><%= f.label :introduction, "施設詳細" %></th>
          <td><%= f.text_area :introduction, class:"room-name" %></td>
      </tr>
      <tr>
          <th><%= f.label :price, "料金" %></th>
          <td><%= f.text_field :price, class:"room-name" %></td>
      </tr>
      <tr>
          <th><%= f.label :address, "住所" %></th>
          <td><%= f.text_field :address, class:"room-name" %></td>
      </tr>
      <tr>
          <th><%= f.label :img, "画像" %></th>
          <td><%= f.file_field :img, class:"room-name" %></td>
      </tr>
    </table>
    <%= f.hidden_field :user_id, value: @user.id %>
    <div class="btn_room_new">
      <%= f.submit "保存"%>
    </div>
    <div class="btn_room_new">
      <%= link_to "キャンセル", :back %>
    </div>
  <% end %>
</div>