<h3>施設一覧</h3>
<%= form_with url: rooms_path, local: true, method: :get do |f| %>
    <%= f.text_field :word, :placeholder => "エリア名を入力" %>
    <%= f.text_field :word2, :placeholder => "キーワード名を入力" %>
    <%= f.hidden_field :search, value: "Multiple_search" %>
    <%= f.submit "検索", class: "btn-sm btn-primary" %>
<% end %>
 <table>
   <thead>
     <tr>
       <th>施設画像</th>
       <th>施設名</th>
       <th>施設詳細</th>
       <th>価格</th>
       <th>住所</th>
       <th>作成日</th>
       <th>投稿者(User_id)</th>
     </tr>
   </thead>
 
   <tbody>
     <% @rooms.each do |room| %>
       <tr>
         <td class="img-profile">
            <% if room.img.blank?  %>
                <%= image_tag  "default_img/default-room.png" %>
            <% else %>
                <%= image_tag  "#{room.img}" %>
            <% end %>
         </td>
         <td><%= link_to room.name, room_path(room.id) %></td>
         <td><%= room.introduction %></td>
         <td><%= room.price %></td>
         <td><%= room.address %></td>
         <td><%= l room.created_at, format: :default %></td>
         <td><%= room.user_id %></td>
       </tr>
     <% end %>
   </tbody>
 </table>
 
 <p><%= link_to "施設新規登録", new_room_path %></p>

 <h2>キーワード "<%= @word %>"</h2>
<h3><%= @search_rooms.count %>件が見つかりました</h2>
<table>
  <thead>
    <tr>
      <th>施設名</th>
      <th>住所</th>
      <th>施設詳細</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @search_rooms.each do |room| %>
      <tr>
        <td><%= link_to room.name, room_path(room.id) %></td>
        <td><%= room.address %></td>
        <td><%= room.introduction %></td>
      </tr>
    <% end %>
  </tbody>
</table>